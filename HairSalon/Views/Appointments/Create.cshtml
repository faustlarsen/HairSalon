@{
  Layout = "_Layout";
}
@model HairSalon.Models.Appointment
<h2>New Appointment</h2>

@using (Html.BeginForm())
{
    
    @Html.DropDownList("StylistId", null, new { @class = "textBox"})
    @Html.LabelFor(model => model.Stylist, "Stylist's Name")
    <br>
    <br>
    @Html.DropDownList("ClientId", null, new { @class = "textBox"})
    @Html.LabelFor(model => model.Client, "Client's Name")
    <br>
    <br>
    @Html.LabelFor(model => model.DateTime, "Date & Time", new { @class = "textBox"})
    @Html.EditorFor(model => model.DateTime, new { htmlAttributes = new {@class = "form-control multi-line textBox"}})
    <br>
    <button class="btn btn-primary" type="submit" value="Submit!" class="btn btn-default">Submit</button>
}
<br>
<strong><p>@Html.ActionLink("Details", "Index")</strong></p>