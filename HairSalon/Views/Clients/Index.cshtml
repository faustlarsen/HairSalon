@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<div class="container card">
    <h3>CLIENTS AND THEIR STYLISTS</h3>
    <hr>

    <form>
        <i class="glyphicon glyphicon-search"></i><input type="text" name="ClientSearch" placeholder="search and press enter">
    </form>
    <br>
    @if (@Model.Count == 0)
    {
      <h3>Client not found</h3>
    } 
    <br>
    @foreach (Client client in Model)
    {
      <strong><li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.Stylist.Name </li></STRONG>
    }
    <br>
    <strong><p>@Html.ActionLink("Add New Client", "Create")</p></strong>
    <strong><p>@Html.ActionLink("Delete All Clients", "DeleteAll")</p></strong>
</div>
<hr>