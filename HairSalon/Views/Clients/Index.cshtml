@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<div class="container card">
    <h3>CLIENTS LIST</h3>

    @if (@Model.Count == 0)
    {
      <h3>Add a Client</h3>
    } 
    <br>
    @foreach (Client client in Model)
    {
      <strong><li>@Html.ActionLink($"{client.Description}", "Details", new { id = client.ClientId }) | @client.Stylist.Name</li></STRONG>
    }
    <br>
    <strong><p>@Html.ActionLink("Add New Client", "Create")</p></strong>
    <strong><p>@Html.ActionLink("Delete All Clients", "DeleteAll")</p></strong>
</div>