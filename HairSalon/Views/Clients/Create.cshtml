@{
  Layout = "_Layout";
}
@model HairSalon.Models.Client
<div class="container card">
    <h3>ADD NEW CLIENT</h3>
    <hr>
    @using (Html.BeginForm())
    {   
      <div class="form-group">
        @Html.TextBoxFor(model => model.Name, new { @required = true })
        @Html.LabelFor(model => model.Name, "Client's Name")
        <br>
        @Html.TextBoxFor(model => model.Description, new { @required = true })
        @Html.LabelFor(model => model.Description, "Haircut Description")
        <br>
        @Html.DropDownList("StylistId")
        @Html.LabelFor(model => model.Stylist, "Pick a Stylist")
        <br>
        <input type="submit" class="btn btn-primary" value="ADD" />
      </div>
    }
    <strong><p>@Html.ActionLink("FULL LIST", "Index")</p></strong>
</div>