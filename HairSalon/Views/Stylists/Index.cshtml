@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<div class="container card">
    <h3>STYLISTS</h3>
    <hr>
    <form>
        <i class="glyphicon glyphicon-search"></i><input type="text" name="StylistSearch" placeholder="search and press enter">
    </form>

    @if (@Model.Count == 0)
    {
      <h3>Add a Stylist</h3>
    } 
    <br>
    @foreach (Stylist stylist in Model)
    {
      <STRONG><p><li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li></p></STRONG>
    }
    <br>
  <strong><p>@Html.ActionLink("Add New Stylist", "Create")</strong></p>
  <strong><p>@Html.ActionLink("Delete All Stylists", "DeleteAll")</strong></p>
</div>